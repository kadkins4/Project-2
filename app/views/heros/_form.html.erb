<div class="top">
  <div class="left">
    <%= form_for @hero do|f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
  <br>
      <%= f.label :image %>
      <%= f.text_field :image %>
  <br>
      <%= f.label :primary %>
      <%= f.select :primary, [ ["Strength", "str"], ["Agility", "agi"], ["Intelligence", 'int'] ] %>
  <br>
      <%= f.label :team_id %>
      <%= f.collection_select(:team_id, Team.all, :id, :name) %>
  <br>
      <%= f.label :complexity %>
      <%= f.select :complexity, options_for_select(1..3) %>
  </div>
  <div class="right">
    <img src="http://cdn.dota2.com/apps/dota2/images/700/gameplay/overlay_heroes_top.png" alt="Heros Await">
  </div>
</div>
<div class="bottom">
    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.label :playing %>
    <%= f.text_area :playing %>
<br>
    <%= f.label :with %>
    <%= f.text_area :with %>

    <%= f.label :against %>
    <%= f.text_area :against %>
</div>
<br>
<div class="btn btn-default">
    <%= f.submit  %>
</div>
  <% end %>
