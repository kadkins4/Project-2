<%= form_for @hero do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :primary %>
  <%= f.select :primary, [ ["Strength", "str"], ["Agility", "agi"], ["Intelligence", 'int'] ] %>

  <%= f.label :image %>
  <%= f.text_field :image %>

  <%= f.label :complexity %>
  <%= f.select :complexity, options_for_select(1..3) %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :playing %>
  <%= f.text_area :playing %>

  <%= f.label :with %>
  <%= f.text_area :with %>

  <%= f.label :against %>
  <%= f.text_area :against %>

  <%= f.label :team_id %>
  <%= f.collection_select(:team_id, Team.all, :id, :name) %>

  <%= f.submit %>
<% end %>
